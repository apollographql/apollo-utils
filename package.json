{
  "name": "apollo-utils",
  "private": "true",
  "description": "Monorepo for Apollo and GraphQL-related utilities packages",
  "keywords": [
    "apollo",
    "graphql",
    "typescript"
  ],
  "author": "Apollo <packages@apollographql.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.13.0 <18.0",
    "npm": ">=7 <9"
  },
  "scripts": {
    "clean": "git clean -dfqX",
    "build": "tsc --build",
    "monorepo-pack": "node ./scripts/monorepo-pack.mjs",
    "lint": "prettier --check .",
    "lint-fix": "prettier --write .",
    "postinstall": "npm run build",
    "test": "jest --verbose",
    "watch": "tsc --build --watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@apollo/utils.createhash": "file:packages/createHash",
    "@apollo/utils.dropunuseddefinitions": "file:packages/dropUnusedDefinitions",
    "@apollo/utils.isnodelike": "file:packages/isNodeLike",
    "@apollo/utils.operationregistrysignature": "file:packages/operationRegistrySignature",
    "@apollo/utils.printwithreducedwhitespace": "file:packages/printWithReducedWhitespace",
    "@apollo/utils.sortast": "file:packages/sortAST",
    "@apollo/utils.stripsensitiveliterals": "file:packages/stripSensitiveLiterals"
  },
  "devDependencies": {
    "@changesets/cli": "2.19.0",
    "@jest/types": "27.4.2",
    "@lerna/command": "4.0.0",
    "@lerna/get-packed": "4.0.0",
    "@lerna/package": "4.0.0",
    "@lerna/package-graph": "4.0.0",
    "@lerna/project": "4.0.0",
    "@lerna/publish": "4.0.0",
    "@lerna/run-lifecycle": "4.0.0",
    "@octokit/request": "5.6.2",
    "@types/jest": "27.0.3",
    "@types/lodash.sortby": "^4.7.6",
    "@types/node": "12.20.37",
    "graphql": "16.2.0",
    "jest": "27.4.5",
    "node-fetch": "3.1.0",
    "npm-packlist": "3.0.0",
    "prettier": "2.5.1",
    "tar": "6.1.11",
    "temp-write": "5.0.0",
    "ts-jest": "27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "4.5.4"
  }
}
