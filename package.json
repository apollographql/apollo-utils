{
  "name": "apollo-utils-monorepo",
  "private": "true",
  "description": "Monorepo for Apollo and GraphQL-related utilities packages",
  "keywords": [
    "apollo",
    "graphql",
    "typescript"
  ],
  "author": "Apollo <packages@apollographql.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "npm": ">=8"
  },
  "scripts": {
    "clean": "git clean -dfqX",
    "build": "tsc --build tsconfig.build.json",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "postinstall": "npm run build",
    "pretest": "tsc --build tsconfig.json",
    "test": "jest --verbose",
    "test:ci": "npm test -- --coverage --ci --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "watch": "npm run build -- --watch",
    "changeset-publish": "changeset publish",
    "install-with-npm-8.5": "npm i -g npm@^8.5.0 && npm i"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "0.4.7",
    "@changesets/cli": "2.25.2",
    "@jest/types": "29.3.1",
    "@types/bunyan": "1.8.8",
    "@types/jest": "29.2.3",
    "@types/lodash.sortby": "4.7.7",
    "@types/make-fetch-happen": "10.0.0",
    "@types/node": "14.18.33",
    "@types/node-fetch": "2.6.2",
    "bunyan": "1.8.15",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "jest": "29.3.1",
    "jest-junit": "15.0.0",
    "log4js": "6.7.0",
    "loglevel": "1.8.1",
    "make-fetch-happen": "11.0.1",
    "node-fetch": "2.6.7",
    "prettier": "2.8.0",
    "ts-expect": "1.3.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.3",
    "undici": "5.13.0",
    "winston": "3.8.2",
    "winston-transport": "4.5.0"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "9.1.2"
  }
}
