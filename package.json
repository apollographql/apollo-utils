{
  "name": "apollo-utils-monorepo",
  "private": "true",
  "description": "Monorepo for Apollo and GraphQL-related utilities packages",
  "keywords": [
    "apollo",
    "graphql",
    "typescript"
  ],
  "author": "Apollo <packages@apollographql.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "scripts": {
    "clean": "git clean -dfqX",
    "build": "tsc --build tsconfig.build.json",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "postinstall": "npm run build",
    "pretest": "tsc --build tsconfig.json",
    "test": "jest --verbose",
    "test:ci": "npm test -- --coverage --ci --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "watch": "npm run build -- --watch",
    "changeset-publish": "changeset publish",
    "lint": "eslint packages/*/src/**/*.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@apollo/client": "4.0.9",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@jest/types": "29.6.3",
    "@types/bunyan": "1.8.11",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.14",
    "@types/lodash.sortby": "4.7.9",
    "@types/make-fetch-happen": "10.0.4",
    "@types/node": "20.19.17",
    "@types/node-fetch": "2.6.13",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "bunyan": "1.8.15",
    "crypto-hash": "1.3.0",
    "eslint": "9.39.1",
    "graphql": "16.11.0",
    "graphql-tag": "2.12.6",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "log4js": "6.9.1",
    "loglevel": "1.9.2",
    "make-fetch-happen": "14.0.3",
    "node-fetch": "2.7.0",
    "prettier": "3.6.2",
    "prettier-2": "npm:prettier@2.8.8",
    "ts-expect": "1.3.0",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "undici": "7.16.0",
    "winston": "3.17.0",
    "winston-transport": "4.9.0"
  }
}
